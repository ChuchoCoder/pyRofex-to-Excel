# EPGB Options Configuration Environment Variables
# Copy this file to .env and replace values with your actual configuration

# Application Environment
APP_ENV=development

# Excel Configuration
EXCEL_FILE=EPGB OC-DI - Python.xlsb
EXCEL_PATH=./
EXCEL_SHEET_PRICES=HomeBroker
EXCEL_SHEET_TICKERS=Tickers

# Excel Update Interval (in seconds, default: 3.0)
# Valid range: 0.1 to 60 seconds
EXCEL_UPDATE_INTERVAL=3.0

# Trades Sheet Configuration
TRADES_SYNC_ENABLED=true
TRADES_REALTIME_ENABLED=false
TRADES_SYNC_INTERVAL_SECONDS=20
EXCEL_SHEET_TRADES=Trades
TRADES_BATCH_SIZE=500

# pyRofex API Configuration
PYROFEX_ENVIRONMENT=LIVE
PYROFEX_API_URL=https://api.cocos.xoms.com.ar/
PYROFEX_WS_URL=wss://api.cocos.xoms.com.ar/
PYROFEX_USER=REPLACE_WITH_YOUR_USERNAME
PYROFEX_PASSWORD=REPLACE_WITH_YOUR_PASSWORD
PYROFEX_ACCOUNT=REPLACE_WITH_YOUR_ACCOUNT

# Security Note:
# Never commit the actual .env file to version control
# Keep credentials secure and use appropriate file permissions